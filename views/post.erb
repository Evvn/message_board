<div class="login_header">

  <h1>#<%= @post['id'] %></h1>
  <a href="/"><h2>&larr; Back</h2></a>

</div>

<div class="posts_container">

  <% if current_user.admin == "1" %>
    <form action="/post/<%= @post['id'] %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button>delete post [A]</button>
    </form>
  <% end %>

  <div class="post">

    <div class="post_image">
      <a href="<%= @post['image_url'] %>" target="_blank"><img src="<%= @post['image_url'] %>" alt="" height=100px;></a>
    </div>

    <div class="post_details">
      <b><%= User.find(@post['user_id']).username %></b>
      <span class="date"><%= @post['post_time']%></span>
    </div>

    <div class="post_number">
      <b>#<%= @post['id'] %></b>
    </div>

    <div class="post_content">
      <%= @post['content'] %>
    </div>

  </div>

  <% @comments.each do |comment| %>
    <div class="post">

      <div class="post_image">
        <a href="<%= comment['image_url'] %>" target="_blank"><img src="<%= comment['image_url'] %>" alt="" height=100px;></a>
        <% if current_user.admin == "1" %>
          <form action="/comment/<%= comment['id'] %>" method="post">
            <input type="hidden" name="post_id" value="<%= @post['id'] %>">
            <input type="hidden" name="_method" value="delete">
            <button>delete comment [A]</button>
          </form>
        <% end %>
      </div>

      <div class="post_details">
        <b><%= User.find(comment['user_id']).username %></b>
        <span class="date"><%= comment['comment_time'] %></span>
      </div>

      <div class="post_number">
        <b>#<%= comment['id'] %></b>
      </div>

      <div class="post_content">
        <p><%= comment['content'] %></p>
      </div>

    </div>
  <% end %>

  <form action="/comment/new" method="post">
    <input type="hidden" name="post_id" value="<%= @post['id'] %>">
    <label for="">image url</label>
    <input type="text" name="image_url" autocomplete="off">
    <label for="">post content</label>
    <textarea name="content"></textarea>
    <button>Send it!</button>
  </form>

</div>
