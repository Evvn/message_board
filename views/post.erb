<h1>View post</h1>
<a href="/">home</a>

<% if current_user.admin == "1" %>
  <form action="/post/<%= @post['id'] %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button>delete post [A]</button>
  </form>
<% end %>

<div>
  <%= User.find(@post['user_id']).username %>
  <%= @post['post_time']%>
  <img src="<%= @post['image_url'] %>" alt="" height=100px;>
  <%= @post['content'] %>
</div>

<% @comments.each do |comment| %>
  <div>
    <% if current_user.admin == "1" %>
      <form action="/comment/<%= comment['id'] %>" method="post">
        <input type="hidden" name="post_id" value="<%= @post['id'] %>">
        <input type="hidden" name="_method" value="delete">
        <button>delete comment [A]</button>
      </form>
    <% end %>
    <p><%= User.find(comment['user_id']).username %></p>
    <p><%= comment['comment_time'] %></p>
    <img src="<%= comment['image_url'] %>" alt="" height=100px;>
    <p><%= comment['content'] %></p>
  </div>
<% end %>

<form action="/comment/new" method="post">
  <input type="hidden" name="post_id" value="<%= @post['id'] %>">
  <label for="">image url</label>
  <input type="text" name="image_url">
  <label for="">post content</label>
  <textarea name="content"></textarea>
  <button>Send it!</button>
</form>
